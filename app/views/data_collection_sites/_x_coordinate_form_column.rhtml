<%
options = { :value => @record.x_coordinate }
options = active_scaffold_input_text_options
options[:disabled] = true unless @record.coordinate_source
%>

<dl>
  <dt>
    <label for="<%= "record_#{column.name}" %>">X Coordinate</label>
  </dt>
  <dd>
    <%= input :record, column.name, options %>
  </dd>
</dl>  

<script type="text/javascript">
    $('record_x_coordinate').observe('keydown', function() {
        $('coordinate-preview-dialog').hide(); 
    });
</script>