<div id="account-recovery">  
  <h1>Forgot Username/Password</h1>
  
  <% if flash[:error] %>
    <div class="error">
      <%= flash[:error] %>
      <%= error_messages_for :user %>
    </div>
  <% end %>
  
  <% if flash[:notice] %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <% form_tag url_for(:action => 'create') do %>
    <p>What is the email address used to create your account?</p>
    <%= text_field_tag :email %>
    <%= submit_tag 'Reset Password' %>
    <%= link_to 'Cancel', login_url %>
<% end %>
</div>