<% 
@parameters << @record.water_chemistry_parameter if @record.water_chemistry_parameter 
options = @parameters.collect{ |parameter| [parameter.name, parameter.id] }
selected = @record.water_chemistry_parameter.id if @record.water_chemistry_parameter
%>
<dl>
  <dt>
    <label for="<%= "record_#{column.name}" %>"><%= column.label %></label>
  </dt>
  <dd>
    <%= select("record", column.name, options, { :selected => selected }) %>
  </dd>
</dl>