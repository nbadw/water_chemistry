<dl id="<%= column.name %>" style="display: <%= (@record.o_and_m && @record.o_and_m.bank_measurement?) ? 'block' : 'none' %>">
  <dt>
    <label for="record[<%= column.name %>]"><%= column.label %></label>
  </dt>
  <dd>
    <%= select("record", column.name, [:bank_side_left_option.l, :bank_side_right_option.l], { :selected => @record.bank }, { :id => "record[#{column.name}]" }) %>
  </dd>
</dl>